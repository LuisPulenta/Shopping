@model Shopping.Data.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<h3>Está seguro de borrar esta categoría?</h3>
<div>
    <h4>Borrar Categoría</h4>
    <hr />
   <partial name="_CategoryDetails"/>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger btn-sm" />
        <a asp-action="Index" class="btn btn-outline-success btn-sm">Regresar</a>
    </form>
</div>
