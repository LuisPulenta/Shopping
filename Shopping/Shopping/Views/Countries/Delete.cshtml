@model Shopping.Data.Entities.Country

@{
    ViewData["Title"] = "Delete";
}
<flash dismissable="true" />
<h3>Está seguro de borrar este registro?</h3>
<div>
    <h4>Borrar País</h4>
    <hr />
   <partial name="_CountryDetails"/>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger btn-sm" />
        <a asp-action="Index" class="btn btn-outline-success btn-sm">Regresar</a>
    </form>
</div>
