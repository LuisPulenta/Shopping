@model Shopping.Models.StateViewModel

@{
    ViewData["Title"] = "Create";
}
<flash dismissable="true" />
<h4>Crear nuevo Departamento/Provincia</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type ="hidden" asp-for="CountryId"/>
            <partial name="_State"/>
            
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary btn-sm" />
                <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-outline-success btn-sm">Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}