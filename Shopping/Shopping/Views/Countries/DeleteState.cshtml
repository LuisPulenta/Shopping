@model Shopping.Data.Entities.State

@{
    ViewData["Title"] = "Delete";
}

<h3>Está seguro de borrar este registro?</h3>
<div>
    <h4>Borrar Estado/Provincia</h4>
    <hr />
   <partial name="_StateDetails"/>
    
    <form asp-action="DeleteState">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger btn-sm" />
        <a asp-action="Details" asp-route-id="@Model.Country.Id" class="btn btn-outline-success btn-sm">Regresar</a>
    </form>
</div>
