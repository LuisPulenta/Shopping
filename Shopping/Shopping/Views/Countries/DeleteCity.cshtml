@model Shopping.Data.Entities.City

@{
    ViewData["Title"] = "Delete";
}
<flash dismissable="true" />
<h3>Está seguro de borrar este registro?</h3>
<div>
    <h4>Borrar Ciudad</h4>
    <hr />
   <partial name="_CityDetails"/>
    
    <form asp-action="DeleteCity">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger btn-sm" />
        <a asp-action="DetailsState" asp-route-id="@Model.State.Id" class="btn btn-outline-success btn-sm">Regresar</a>
    </form>
</div>
