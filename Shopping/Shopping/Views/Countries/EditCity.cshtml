@model Shopping.Models.CityViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Ciudad</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="StateId" />

            <partial name="_City"/>
              
            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                    <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-outline-success btn-sm">Regresar</a>
            </div>
        </form>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
